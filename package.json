{
  "name": "apptaken",
  "version": "0.1.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "desktop": "concurrently \"expo start --web\" \"wait-on http://localhost:19006 && electron ./electron/main.cjs\"",
    "build:web": "expo export --platform web",
    "standalone": "npm run build:web && electron ./electron/main.cjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "api:dev": "tsx api/server.ts",
    "mcp:dev": "tsx mcp/server.ts"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/src/__tests__/**/*.test.ts"
        ]
      }
    ]
  },
  "dependencies": {
    "@10play/tentap-editor": "^1.0.1",
    "@anthropic-ai/sdk": "^0.76.0",
    "@expo/vector-icons": "^14.0.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@supabase/supabase-js": "^2.49.1",
    "@tanstack/react-query": "^5.66.0",
    "dotenv": "^16.4.7",
    "expo": "~51.0.39",
    "expo-auth-session": "~5.5.2",
    "expo-clipboard": "~6.0.3",
    "expo-constants": "~16.0.2",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.24",
    "expo-secure-store": "~13.0.2",
    "expo-splash-screen": "~0.27.6",
    "expo-status-bar": "~1.12.1",
    "express": "^4.21.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-mmkv": "^2.12.2",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10",
    "uuid": "^11.0.5",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.4",
    "@types/react": "~18.2.79",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "eslint": "^9.20.1",
    "eslint-config-expo": "^7.1.0",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.17",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "~5.3.3",
    "wait-on": "^8.0.3"
  }
}
